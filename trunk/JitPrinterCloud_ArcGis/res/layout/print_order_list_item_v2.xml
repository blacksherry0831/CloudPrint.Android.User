<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
     android:background="@color/qin_list_view_item_color"
    android:orientation="horizontal" >
  
         <ImageView
             android:id="@+id/id_po_list_item_image"
             android:layout_width="0dp"
             android:layout_height="100dp"
             android:padding="8dp"
             android:layout_weight="150"
             android:scaleType="fitCenter"
             android:src="@drawable/print_order_item_img" />
           
   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="wrap_content"
      
       android:layout_weight="380"
       android:orientation="vertical" >

        <TextView
            android:id="@+id/id_po_list_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/print_out_item_list_test"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            >

		 </TextView>

      

    </LinearLayout>
   

 

 

</LinearLayout>
    

