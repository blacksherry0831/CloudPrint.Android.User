<?xml version="1.0" encoding="UTF-8"?>            
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">            
<!--  设置背景色（黑色）  -->               
<item  android:id="@android:id/background" >              
<shape>
	<corners android:radius="15dp" />               
	<!--   <gradient  android:startColor="@color/aliceblue"               
		   android:endColor="@color/aliceblue"    />     -->
				<gradient android:startColor="#8fffffff"              
			  android:endColor="#8fffffff" />                
</shape>             
</item>                                

<!--  设置进度条颜色（白色）  -->               
<item  android:id="@android:id/progress" >              
<clip>               
	<shape>                
		<corners android:radius="15dp" />                
	       <gradient  android:startColor="#00cd00"               
		   android:endColor="#00cd00"></gradient>
	</shape>              
</clip>             
</item>            

</layer-list>
